

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anshulvanawat.tictactoe.MainActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="475dp">


        <Button
            android:id="@+id/start"
            style="@style/Base.Theme.AppCompat.Light.DarkActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ractangle2"
            android:onClick="onPress"
            android:text="@string/Start"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/EnterText"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/Player1Hint"
            android:maxWidth="90dp"
            android:textColor="#001e93"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="25sp"
            android:layout_marginTop="157dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/player1"
            android:background="@android:color/transparent"
            android:hint="@string/Player2Hint"
            android:maxWidth="90dp"
            android:textColor="#001e93"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tic"
            tools:ignore="ContentDescription"
            android:layout_above="@+id/player2"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/toe"
            tools:ignore="ContentDescription"
            android:layout_above="@+id/player2"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</ScrollView>
